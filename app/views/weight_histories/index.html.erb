<section class="hero is-white">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        体重記録
      </h1>
    </div>
  </div>
</section>

  <div class="col-md-9 col-sm-12 col-xs-12">
    <%= month_calendar events: @weight_histories do |date, weight_histories| %>
      <%= date.day %>
      <% weight_histories.each do |weight_histories| %>
        <div>
          <%= link_to "記録済み", edit_weight_history_path(weight_histories) %>
        </div>
      <% end %>
    <% end %>
		<table class="memo table table-bordered">
			<thead>
				<tr class = "box">
					<th>体重</th>
			    <th>計測日時</th>
					<th></th>
					<th></th>
				</tr>
		  </thead>
      <% @weight_histories.each do |weight_history| %>
        <tr class = "box">
          <td><strong><%= weight_history.weight %></strong>Kg</td>
          <td><strong><%= weight_history.start_time.strftime("%Y-%m-%d %H:%M") %></strong></td>
          <td><%= link_to '詳細', weight_history_path(weight_history.id), class: "button is-primary is-small" %></td>
          <td><%= link_to '編集', edit_weight_history_path(weight_history), class: "button is-primary is-small" %></td>
          <td><%= link_to '削除', weight_history, method: :delete, data: { confirm: '本当に削除してよろしいですか?' }, class: "button is-primary is-small" %></td>
        </tr>
      <% end %>
  	</table>
  <br>
</div>

<%= link_to '体重を記録する', new_weight_history_path, class: "button is-link" %>

<footer class="footer">
	<p>Copyright © 2022 kazutomo_shimizu</p>
</footer>
