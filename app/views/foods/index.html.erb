<section class="hero is-white">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Foods
      </h1>
    </div>
  </div>
</section>


<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @foods.each do |food| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to food_path(food) do %>
                  <%= image_tag food.image.url if food.image.present? %>
                <% end %>
              </figure>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

