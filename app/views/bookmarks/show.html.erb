<div class="mypage-img">
	<%= image_tag "fav.png" %>
</div>

<% if @bookmark_list.present? %>
  <section class="section">
    <div class="container">
      <div class="columns is-multiline">
        <% @bookmark_list.each do |food| %>
          <div class="column is-4">
            <div class="card">
              <div class="card-image">
                <figure class="image is-4by3">
                  <%= link_to food_path(food) do %>
                    <%= image_tag food.image.url if food.image.present? %>
                  <% end %>
                </figure>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>


