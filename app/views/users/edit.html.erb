<div class="user-edit-img">
	<img src= "/assets/ue.png", width="20%">
</div>

<article class="message is-danger mb-0", id = "error_id">
  <% if @user.errors.any? %>
    <div class='message-header'>
      <h2><%= @user.errors.count %>件のエラーがあります。</h2>
    </div>
    <div class='message-body'>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </div>
  <% end %>
</article>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @user do |f| %>
          <div class="field">
            <%= f.label :name, "ユーザー名", class: "label" %>
            <%= f.text_field :name, class: "input", placeholder: "ユーザー名" %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス", class: "label" %>
            <%= f.email_field :email, class: "input", placeholder: "メールアドレス" %>
          </div>

          <div class="field">
            <%= f.label :image, "プロフィール画像", class: "label" %>
            <%= f.file_field :image, class: "input" %>
          </div>

          <%= f.submit "更新", class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
