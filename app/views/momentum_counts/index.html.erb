<h1>MomentumCounts#index</h1>
<p>Find me in app/views/momentum_counts/index.html.erb</p>

<%= form_with(url: momentum_counts_path, local: true, method: :get) do |form| %>
  <div class = "form-row">
    <span class = "form-group col-md-4">
      <%= form.number_field :name, placeholder:"基礎代謝", type: "integer", class: "form-control",id: "inputcity" %>
    </span>
    <span class = "form-group col-md-4">
      <%= form.select :magnification, MomentumCount.magnifications.keys.to_a, {include_blank: true}, id:"inputstate_status", class: "form-control" %>
    </span>
    <span>
      <%= form.submit "計算", class:"button is-primary" %>
    </span>
  </div>
<% end %>

<p>標準</p>
<%= @nomal %>


